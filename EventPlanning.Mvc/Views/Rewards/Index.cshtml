@model IEnumerable<EventPlanning.Mvc.Models.Entities.Reward>

@{
    ViewBag.Title = "Награды";
}

<h2>Награды</h2>

<p>
    @Html.ActionLink("Создать новую награду", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AwardName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AwardName)
        </td>
        <td>
            @Html.ActionLink("Редактирование", "Edit", new { id=item.RewardId }) |
            @Html.ActionLink("Подробнее", "Details", new { id=item.RewardId }) |
            @Html.ActionLink("Удаление", "Delete", new { id=item.RewardId })
        </td>
    </tr>
}

</table>
